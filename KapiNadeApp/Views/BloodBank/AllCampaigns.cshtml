@model IEnumerable<DatabaseLayer.CampaignTable>

@{
    ViewBag.Title = "Campaigns";
}



<div class="col-md-12">

    <div class="contact-form-block">

        <h2 class="contact-title">Kampanje</h2>

        <p>
            @Html.ActionLink("Nova kampanja", "NewCampaign", null, new { @class = "btn btn-theme" })
        </p>
        <table class="table table-hover">
            <tr>
                <th>
                    Datum kampanje
                </th>
                <th>
                    Početak
                </th>
                <th>
                    Kraj
                </th>
                <th>
                    Lokacija
                </th>
                <th>
                    Detalji
                </th>
                <th>
                    Baner
                </th>
                <th>
                    Naslov
                </th>
                <th>
                    Organizator
                </th>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CampaignDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CampaignDetails)
                    </td>
                    <td>
                      
                            @if (!string.IsNullOrEmpty(item.CampaignPhoto))
                            {
                                <img src="@Url.Content(item.CampaignPhoto)" alt="image"
                                     style="width:100px; max-height:150px; max-width:100%;" />
                            }
                            else
                            {
                                <img style="width:100px; max-height:150px; max-width:100%; " />
                            }
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.CampaignTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BloodBankTable.Name)
                    </td>
                </tr>
            }

        </table>
        </div>
</div>