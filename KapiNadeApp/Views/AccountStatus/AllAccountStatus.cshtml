@model IEnumerable<KapiNadeApp.Models.AccountStatusMV>

@{
    ViewBag.Title = "All account status";
}

<div class="col-md-10">

    <div class="contact-form-block">

        <h2 class="contact-title">Status računa</h2>

        <p>
            @Html.ActionLink("Novi status računa", "Create", null, new { @class = "btn btn-custom" })
        </p>
        <table class="table table-hover">

            <tr>
                <th>
                    Status računa
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountStatus)
                    </td>
                    <td>
                        @Html.ActionLink("Uredi", "Edit", new { id = item.AccountStatusID }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Obriši", "Delete", new { id = item.AccountStatusID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>

