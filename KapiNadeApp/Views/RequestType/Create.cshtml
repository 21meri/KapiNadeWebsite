@model KapiNadeApp.Models.RequestTypeMV

@{
    ViewBag.Title = "Request Type";
}

<div class="col-md-6">

    <div class="contact-form-block">

        <h2 class="contact-title">Novi tip zahtjeva</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                Unesite tip zahtjeva:
                @Html.EditorFor(model => model.RequestType, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RequestType, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">

                <input type="submit" style="float:right;" value="Dodaj" class="btn btn-custom" />
                @Html.ActionLink("Nazad", "AllRequestType", null, new { @class = "btn btn-theme-invert" })
            </div>


        }

    </div>

</div>

