@model IEnumerable<KapiNadeApp.Models.RequestTypeMV>

@{
    ViewBag.Title = "All request types";
}

<div class="col-md-8">

    <div class="contact-form-block">

        <h2 class="contact-title">Svi tipovi zahtjeva</h2>

        <p>
            @Html.ActionLink("Novi tip zahtjeva", "Create", null, new { @class = "btn btn-custom" })
        </p>
        <table class="table table-hover">

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RequestType)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestType)
                    </td>
                    <td>
                        @Html.ActionLink("Uredi", "Edit", new { id = item.RequestTypeID }, new { @class="btn btn-primary"}) 
                        @Html.ActionLink("Obriši", "Delete", new { id = item.RequestTypeID } , new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>

        </div>
    </div>

