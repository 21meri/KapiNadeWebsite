@model IEnumerable<KapiNadeApp.Models.BloodGroupsMV>

@{
    ViewBag.Title = "All blood groups";
}

<div class="col-md-8">

    <div class="contact-form-block">

        <h2 class="contact-title">Krvne grupe</h2>

        <p>
            @Html.ActionLink("Nova krvna grupa", "Create", null, new { @class = "btn btn-custom" })
        </p>
        <table class="table table-hover">

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BloodGroup)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BloodGroup)
                    </td>
                    <td>
                        @Html.ActionLink("Uredi", "Edit", new { id = item.BloodGroupID }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Obriši", "Delete", new { id = item.BloodGroupID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>

