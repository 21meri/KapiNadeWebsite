@model KapiNadeApp.Models.BloodGroupsMV

@{
    ViewBag.Title = "Blood Group ";
}

<div class="col-md-6">

    <div class="contact-form-block">

        <h2 class="contact-title">Uredi krvnu grupu</h2>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.BloodGroupID)
            <div class="form-group">

                Krvna grupa:
                @Html.EditorFor(model => model.BloodGroup, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BloodGroup, "", new { @class = "text-danger" })

            </div>

            <div class="form-group">

                <input type="submit" style="float:right;" value="Ažuriraj" class="btn btn-custom" />
                @Html.ActionLink("Nazad", "AllBloodGroups", null, new { @class = "btn btn-theme-invert" })
            </div>


        }

    </div>

</div>

