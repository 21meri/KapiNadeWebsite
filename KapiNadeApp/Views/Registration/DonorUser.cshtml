@model KapiNadeApp.Models.RegistrationMV
@{
    ViewBag.Title = "Donor Registration";
}


<div class="appointment-form-wrapper text-center clearfix">
    <h3 class="join-heading join-heading-alt">Registracijska forma za davaoca</h3>
    @using (Html.BeginForm("DonorUser", "Registration", FormMethod.Post, new { @class = "appoinment-form" }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserTypeID)
        @Html.HiddenFor(model => model.User.UserID)
        @Html.HiddenFor(model => model.User.Username)
        @Html.HiddenFor(model => model.User.Password)
        @Html.HiddenFor(model => model.User.AccountStatus)
        @Html.HiddenFor(model => model.User.AccountStatusID)
        @Html.HiddenFor(model => model.User.Email)

        <div class="form-group col-md-6">
            <label style="float:left;">Unesite Vaše ime:</label>

            @Html.EditorFor(model => model.Donor.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "", @type = "text" } })
            @Html.ValidationMessageFor(model => model.Donor.Name, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            <label style="float:left;">Unesite Vaše prezime:</label>

            @Html.EditorFor(model => model.Donor.Surname, new { htmlAttributes = new { @class = "form-control", @placeholder = "", @type = "text" } })
            @Html.ValidationMessageFor(model => model.Donor.Surname, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            <label style="float:left;">Unesite broj Vaše zdravstvene kartice:</label>
            @Html.EditorFor(model => model.Donor.CardNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "" } })
            @Html.ValidationMessageFor(model => model.Donor.CardNumber, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            <label style="float:left;">Odaberite Vaš spol:</label>
            <div class="select-style">
                @Html.DropDownList("GenderID", null, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GenderID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-6">
            <label style="float:left;">Unesite Vaš datum rođenja:</label>
            @Html.EditorFor(model => model.Donor.DateOfBirth, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Donor.DateOfBirth, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            <label style="float:left;">Odaberite Vašu krvnu grupu:</label>
            <div class="select-style">
                @Html.DropDownList("BloodGroupID", null, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BloodGroupID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-6">
            <label style="float:left;">Unesite datum Vaše zadnje donacije:</label>
            @Html.EditorFor(model => model.Donor.LastDonationDate, new { htmlAttributes = new { @class = "form-control", @placeholder = "Donation Date" } })
            @Html.ValidationMessageFor(model => model.Donor.LastDonationDate, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            <label style="float:left;">Unesite Vašu adresu:</label>

            @Html.EditorFor(model => model.Donor.Address, new { htmlAttributes = new { @class = "form-control", @placeholder = "", @type = "text" } })
            @Html.ValidationMessageFor(model => model.Donor.Address, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            <label style="float:left;">Odaberite Vaš grad:</label>
            <div class="select-style">
                @Html.DropDownList("CityID", null, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CityID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-6">
            <label style="float:left;">Unesite Vaš broj telefona:</label>

            @Html.EditorFor(model => model.Donor.ContactNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "" } })
            @Html.ValidationMessageFor(model => model.Donor.ContactNumber, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            <label style="float:left;">Unesite Vaš kontaktni mail:</label>
            @Html.EditorFor(model => model.Donor.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "", @type = "email" } })
            @Html.ValidationMessageFor(model => model.Donor.Email, "", new { @class = "text-danger" })
        </div>












        <div class="form-group col-md-12 col-sm-12 col-xs-12">
            <button id="btn_submit" class="btn-submit" type="submit">Pošalji</button>
        </div>



    }

</div>
