@model KapiNadeApp.Models.RegistrationMV
@{
    ViewBag.Title = "Blood Bank";
}

<div class="appointment-form-wrapper text-center clearfix">
    <h3 class="join-heading join-heading-alt">Blood Bank Registration</h3>
    @using (Html.BeginForm("BloodBankUser", "Registration", FormMethod.Post, new { @class = "appoinment-form" }))
    {

        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserTypeID)
        @Html.HiddenFor(model => model.User.UserID)
        @Html.HiddenFor(model => model.User.Username)
        @Html.HiddenFor(model => model.User.Password)
        @Html.HiddenFor(model => model.User.AccountStatus)
        @Html.HiddenFor(model => model.User.AccountStatusID)
        @Html.HiddenFor(model => model.User.Email)


        <div class="form-group col-md-6">
            <label style="float:left;">Enter your name:</label>

            @Html.EditorFor(model => model.BloodBank.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "", @type = "text" } })
            @Html.ValidationMessageFor(model => model.BloodBank.Name, "", new { @class = "text-danger" })


        </div>

        <div class="form-group col-md-6">
            <label style="float:left;">Enter your address:</label>
            @Html.EditorFor(model => model.BloodBank.Address, new { htmlAttributes = new { @class = "form-control", @placeholder = "", @type = "text" } })
            @Html.ValidationMessageFor(model => model.BloodBank.Address, "", new { @class = "text-danger" })
        </div>

        <div class="form-group col-md-6">
            <label style="float:left;">Select your city:</label>
            <div class="select-style">
                @Html.DropDownList("CityID", null, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CityID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-6">
            <label style="float:left;">Enter your contact number:</label>
            @Html.EditorFor(model => model.BloodBank.ContactNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "" } })
            @Html.ValidationMessageFor(model => model.BloodBank.ContactNumber, "", new { @class = "text-danger" })

        </div>


        <div class="form-group col-md-6">
            <label style="float:left;">Enter your email:</label>
            @Html.EditorFor(model => model.BloodBank.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "", @type = "email" } })
            @Html.ValidationMessageFor(model => model.BloodBank.Email, "", new { @class = "text-danger" })


        </div>






        <div class="form-group col-md-12 col-sm-12 col-xs-12">
            <button id="btn_submit" class="btn-submit" type="submit">Submit</button>
        </div>

    }


</div>