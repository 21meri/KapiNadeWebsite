@model IEnumerable<KapiNadeApp.Models.UserMV>

@{
    ViewBag.Title = "All Users";
}

<div class="col-md-8">

    <div class="contact-form-block">

        <h2 class="contact-title">All Users</h2>

     
        <table class="table table-hover">

            <tr>
                <th>
                    User Name
                </th>
                <th>
                    UserType
                </th>
                <th>
                    AccountStatus
                </th>
                <th>
                    Email
                </th>
                <th></th>
            </tr>

            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => user.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.UserType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.AccountStatus)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.UsernameOrEmail)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = user.UserID }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "Delete", new { id = user.UserID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>
