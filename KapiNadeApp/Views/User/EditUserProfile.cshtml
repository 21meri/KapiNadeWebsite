                        </dd>


                        <dt>
                            Broj kartice:
                        </dt>

                        <dd>
                            @Html.EditorFor(model => model.Donor.CardNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Donor.CardNumber, "", new { @class = "text-danger" })
                        </dd>

                        <dt>
                            Spol:
                        </dt>

                        <dd>
                            <div class="select-style">
                                @Html.DropDownList("GenderID", null, "--Odaberi spol--", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.GenderID, "", new { @class = "text-danger" })
                            </div>
                        </dd>

                        <dt>
                            Datum rođenja:
