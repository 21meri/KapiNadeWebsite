                            @Html.ValidationMessageFor(model => model.BloodBank.Email, "", new { @class = "text-danger" })
                        </dd>




                    </dl>

                }
                else if (Model.Seeker.SeekerID > 0)
                {


                    <h4>Uredi detalje profila primaoca</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            Ime:
                        </dt>

                        <dd>
                            @Html.EditorFor(model => model.Seeker.Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Seeker.Name, "", new { @class = "text-danger" })
                        </dd>

                        <dt>
                            Prezime:
                        </dt>

                        <dd>
                            @Html.EditorFor(model => model.Seeker.Surname, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Seeker.Surname, "", new { @class = "text-danger" })
                        </dd>

                        <dt>
                            Broj kartice:
                        </dt>

                        <dd>
                            @Html.EditorFor(model => model.Seeker.CardNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Seeker.CardNumber, "", new { @class = "text-danger" })
                        </dd>

                        <dt>
