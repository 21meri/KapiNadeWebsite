                            </div>
                        </dd>

                        <dt>
                            Datum zadnje donacije:
                        </dt>

                        <dd>
                            @Html.EditorFor(model => model.Donor.LastDonationDate, new { htmlAttributes = new { @class = "form-control" } })
                        </dd>

                        <dt>
                            Kontakt broj:
                        </dt>

                        <dd>
                            @Html.EditorFor(model => model.Donor.ContactNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Donor.ContactNumber, "", new { @class = "text-danger" })
                        </dd>


                        <dt>
                            Adresa:
                        </dt>

                        <dd>
                            @Html.EditorFor(model => model.Donor.Address, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Donor.Address, "", new { @class = "text-danger" })
                        </dd>

                        <dt>
                            Grad:
                        </dt>

                        <dd>
                            <div class="select-style">
                                @Html.DropDownList("CityID", null, "--Odaberi grad--", new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.CityID, "", new { @class = "text-danger" })
                            </div>
                        </dd>






                        <dt>
                            Kontakt E-mail:
                        </dt>

                        <dd>
                            @Html.EditorFor(model => model.Donor.Email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Donor.Email, "", new { @class = "text-danger" })
                        </dd>




                    </dl>

                }
                else if (Model.BloodBank.BloodBankID > 0)
                {



                    <h4>Uredi detalje profila krvne banke</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
