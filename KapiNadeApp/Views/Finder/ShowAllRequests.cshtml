@model IEnumerable<KapiNadeApp.Models.RequestListMV>

@{
    ViewBag.Title = "Show All Requests";
}




<div class="col-md-10">

    <div class="contact-form-block">

        <h2 class="contact-title">All requests</h2>

        <p>
            @Html.ActionLink("New Request", "FinderOfDonors", null, new { @class = "btn btn-custom" })
        </p>
        <table class="table table-hover">

            <tr>
                <th>
                    Request Date
                </th>
                <th>
                    Donor
                </th>
                <th>
                    Blood Group
                </th>
                <th>
                    Expected Date
                </th>
                <th>
                    Description
                </th>
                <th>
                    Status
                </th>
                <th>
                    Action
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AcceptedName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BloodGroup)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpectedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestDetails)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AcceptedType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestStatus)
                    </td>
                    <td>
                    <td class="text-right">
                        @Html.ActionLink("Cancel", "CancelRequest", new { id = item.RequestID }, new { @class = "btn btn-danger" })

                    </td>
                </tr>
            }

        </table>
    </div>
</div>
