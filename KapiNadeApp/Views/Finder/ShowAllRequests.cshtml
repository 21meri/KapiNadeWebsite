@model IEnumerable<KapiNadeApp.Models.RequestListMV>

@{
    ViewBag.Title = "Show All Requests";
}




<div class="col-md-10">

    <div class="contact-form-block">

        <h2 class="contact-title">Svi zahtjevi</h2>

        <p>
            @Html.ActionLink("Novi zahtjev", "FinderOfDonors", null, new { @class = "btn btn-custom" })
        </p>
        <table class="table table-hover">

            <tr>
                <th>
                    Datum zahtjeva
                </th>
                <th>
                    Davalac
                </th>
                <th>
                    Potrebna krvna grupa
                </th>
                <th>
                    Očekivani datum
                </th>
                <th>
                    Opis
                </th>
                <th>
                    Status
                </th>
                <th>
                    Akcija
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestDate)
                    </td>
                    <td>
                        @item.AcceptedName ( @item.AcceptedType-@item.ContactNumber)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BloodGroup)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ExpectedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestDetails)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestStatus)
                    </td>
                    
                    <td>
                        @if (item.RequestStatusID == 1)
                        {
                            @Html.ActionLink("Otkaži", "CancelRequest", new { id = item.RequestID }, new { @class = "btn btn-danger" })
                        }
                        else if (item.RequestStatusID == 2)
                        {
                            @Html.ActionLink("Završi", "CompleteRequest", new { id = item.RequestID }, new { @class = "btn btn-success" })

                        }
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
