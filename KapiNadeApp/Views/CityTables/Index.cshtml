@model IEnumerable<DatabaseLayer.CityTable>

@{
    ViewBag.Title = "Cities";
}




<div class="col-md-8">

    <div class="contact-form-block">

        <h2 class="contact-title">Svi gradovi</h2>

        <p>
            @Html.ActionLink("Novi grad", "Create", null, new { @class = "btn btn-custom" })
        </p>
        <table class="table table-hover">
            <tr>
                <th>
                    Grad
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td class="text-right">
                        @Html.ActionLink("Uredi", "Edit", new { id = item.CityID }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Obriši", "Delete", new { id = item.CityID }, new { @class = "btn btn-danger" })

                    </td>
                </tr>
            }

        </table>
        </div> </div>